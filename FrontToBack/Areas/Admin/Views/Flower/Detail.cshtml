
@model Product
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-4 card">
            <div class="card-header text-center">
                <img style="width: 100%; " src="~/img/@Model.ImageUrl" alt="Alternate Text" />
            </div>
            <div class="card-body">
                <h2>@Model.Title</h2>
                <h2>@Model.Category.Name</h2>
                <h3>@Model.Price $</h3>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a asp-area="Admin" asp-controller="Flower" asp-action="index" class="btn btn-inverse-secondary">Back List</a>
                <form method="post" asp-action="DeletePost" asp-route-id="@Model.Id">

                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
