@model Category
@{
    ViewData["Title"] = "Detail";
}

<div class="row justify-content-center">
    <div class="col-lg-3 card">
        <div class="card-header">
            <img src="/admin/images/faces/face10.jpg" alt="Alternate Text" />
        </div>
        <div class="card-body">
            <h1>@Model.Name</h1>
            @Html.Raw(Model.Description)
            
        </div>
        <div class="card-footer">
            <a asp-area="Admin" asp-controller="Category" asp-action="index" class="btn btn-success">Back List</a>
            
        </div>
    </div>
</div>
