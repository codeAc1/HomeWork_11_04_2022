@model Slider
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12 card">
            <div class="card-header">
                <img style="width:100%" src="/img/@Model.Photo" alt="Alternate Text" />
            </div>
            
            <div class="card-footer d-flex justify-content-between">
                <a asp-area="Admin" asp-controller="Slider" asp-action="index" class="btn btn-inverse-secondary">Back List</a>
                <form method="post">

                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

