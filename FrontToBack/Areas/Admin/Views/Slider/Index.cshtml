@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <a asp-area="admin" asp-controller="slider" asp-action="create" class="btn btn-success mb-3">Create New Slider</a>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sliders</h4>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th>
                                   Image
                                </th>
                               
                                <th>
                                    <span>Settings</span>
                                    
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (Slider slide in Model)
                            {

                                <tr>



                                    <td >
                                        <img src="~/img/@slide.ImageUrl" alt="Alternate Text"  />
                                    </td>
                                    <td>
                                        <a class="btn btn-success" asp-action="Detail" asp-route-id="@slide.Id">
                                            <i class="mdi mdi-account-card-details"></i>
                                        </a>
                                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@slide.Id">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@slide.Id">
                                            <i class="mdi mdi-delete-forever"></i>
                                        </a>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


